<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Night theme aligned with Material3 and app color resources -->
    <style name="Theme.Essycoff" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Background Colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="android:colorBackground">@color/background</item>

        <!-- Text Colors -->
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorOnSecondary">@color/on_primary</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Material Components -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- TextInputLayout Colors -->
        <item name="colorControlNormal">@color/text_hint</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>